<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_twenty"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_video_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_ten"
            android:textColor="@color/red"
            android:textSize="@dimen/text_sub" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_gallery"
                android:visibility="invisible"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_twenty"
                android:padding="@dimen/margin_one"
               />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/iv_action"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_vertical"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_camera_capture" />

                <ImageView
                    android:id="@+id/iv_flip"
                    android:layout_width="35dp"
                   android:layout_toRightOf="@id/iv_action"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_fifty"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:padding="4dp"
                    android:src="@mipmap/icon_switch_camera" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>